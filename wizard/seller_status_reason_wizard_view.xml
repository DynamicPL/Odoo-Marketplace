<odoo>
    <data>
        <record id="wk_seller_status_reason_wizard_form_view" model="ir.ui.view">
            <field name="name">seller.payment.form</field>
            <field name="model">seller.status.reason.wizard</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <form string="Seller Denied Reason">
                    <group>
                        <field name="mp_reason_type" invisible="1"/>
                        <field name="mp_reason_id" required="1" domain="[('reason_type','=',mp_reason_type)]" options="{'no_create': True}"/>
                        <field name="reason" placeholder="Any additional comment..."/>
                    </group>
                    <footer>
                        <button string="Deny Now" name="do_denied" invisible="mp_reason_type != 'seller_profile_reason'" type="object" class="btn-primary"/>
                        <button string="Reject Now" name="do_denied" invisible="mp_reason_type not in ['product_reason', 'inventory_reason']" type="object" class="btn-primary"/>
                        <button string="Cancel Now" name="do_denied" invisible="mp_reason_type != 'seller_payment_reason'" type="object" class="btn-primary"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="wk_seller_statsu_reason_wizard_action" model="ir.actions.act_window">
            <field name="name">Reason</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">seller.status.reason.wizard</field>
            <field name="binding_view_types">form</field>
            <field name="target">new</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wk_seller_status_reason_wizard_form_view"/>
        </record>
    </data>
</odoo>
