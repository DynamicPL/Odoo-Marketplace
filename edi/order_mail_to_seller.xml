<odoo>
    <data noupdate="1">
        <!--Email template for seller_product_approval-->
        <record id="marketplace_template_for_order_to_seller" model="mail.template">
            <field name="name">Notification Mail to Seller When Order Confirmed For Marketplace Product</field>
            <field name="email_from">{{ (object.company_id.email or ctx.get('company') and ctx.get('company').email or '') }}</field>
            <field name="subject">Order Confirmed for Your Product!</field>
            <field name="email_to">{{ (ctx.get('seller').email if ctx.get('seller') else '') }}</field>
            <field name="model_id" ref="odoo_marketplace.model_sale_order"/>
            <field name="auto_delete" eval="True"/>
            <field name="lang">{{object.partner_id.lang}}</field>
            <field name="body_html" type="html">
                <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
                    <t t-set="contactus_link" t-value="object.get_base_url()+'/contactus'"/>
                    <t t-set="product_list" t-value="object.get_seller_product_list(ctx.get('seller'))"/>
                    <p>Dear <t t-if="ctx.get('seller')"><t t-out="ctx.get('seller').name or ''"/></t>,</p>
                    <p>Great news! An order for your product has been confirmed.</p>
                    <p class="fs-4"><b>Order Details:</b></p>
                    <ul>
                        <li><b>Order ID: </b><t t-out="object.name"/></li>
                        <li><b>Order Date: </b><t t-out="object.date_order"/></li>
                        <li><b>Product(s) Ordered: </b><t t-out="product_list or '--not found---'"/></li>
                        <li><b>Total Amount: </b><t t-out="object.amount_total"/></li>
                    </ul>
                    <p>If you have any questions or need assistance, our team is here to help. please reach out to us at <a t-attf-href="#{contactus_link}">Contact Us.</a></p>
                    <p>Thank you for being a valued seller on our platform. We look forward to your continued success!</p>
                    <p>Best regards,</p>
                    <t t-out="object.company_id.name"/>
                </div>
            </field>
        </record>
    </data>
</odoo>
